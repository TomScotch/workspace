#dockerfile template
#Dockerfile

FROM armhf/ubuntu:16.10

ENV DEBIAN_FRONTEND noninteractive

RUN apt-get update
RUN apt-get upgrade -y
RUN apt-get dist-upgrade -y

RUN apt-get update -y &&    \
	apt-get install -y  \
	nano wget curl git  \
	 build-essential    \
locales ca-certificates     \
software-properties-common

RUN locale-gen de_DE.UTF-8
RUN /usr/sbin/update-locale LANG=de_DE.UTF-8
RUN locale-gen de_DE.UTF-8
ENV LANG de_DE.UTF-8

WORKDIR /opt/

##############
#start here

RUN apt-get update
RUN apt-get install -y \
    cmake \
    g++ \
    git \
    google-mock \
    libboost-all-dev \
    libeigen3-dev \
    libgflags-dev \
    libgoogle-glog-dev \
    liblua5.2-dev \
    libprotobuf-dev \
    libsuitesparse-dev \
    libwebp-dev \
    ninja-build \
    protobuf-compiler \
    python-sphinx \
    python-setuptools \
    python-pip \
    python-scipy \
    python-skimage \
    python-sklearn \
    libhdf5-serial-dev \  
    hdf5-tools \ 
    h5utils \ 
    libhdf5-dev 

RUN pip install keras
RUN git clone https://github.com/saikatbsk/Vincent-AI-Artist.git /opt/vincent/
WORKDIR /opt/vincent/
COPY vgg16_weights.h5 /opt/vincent/

